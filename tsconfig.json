{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "paths": {
      "@core": [
        "src/core/index.ts"
      ],
      "@components": [
        "src/components/index.ts"
      ]
    }
  }
}